{
  "name": "suft-telegram-bot",
  "version": "1.0.0",
  "main": "src/index.ts",
  "scripts": {
    "dev": "nodemon --watch src --delay 1 --exec ts-node src/index.ts",
    "lint": "eslint src/*",
    "start": "tsc && node ./dist",
    "build": "tsc"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "express": "^4.17.0",
    "log4js": "^4.1.0",
    "node-telegram-bot-api": "^0.40.0"
  },
  "devDependencies": {
    "@types/cors": "^2.8.4",
    "@types/dotenv": "^6.1.0",
    "@types/express": "^4.16.1",
    "@types/node": "^12.0.2",
    "@types/node-telegram-bot-api": "^0.40.2",
    "@typescript-eslint/eslint-plugin": "^2.6.0",
    "@typescript-eslint/parser": "^2.18.0",
    "dotenv": "^8.0.0",
    "eslint": "^6.6.0",
    "eslint-config-airbnb-base": "^14.0.0",
    "eslint-plugin-import": "^2.20.1",
    "nodemon": "^1.18.11",
    "prettier": "^1.18.2",
    "typescript": "^3.4.5"
  },
  "eslintConfig": {
    "parser": "@typescript-eslint/parser",
    "extends": [
      "plugin:@typescript-eslint/recommended",
      "airbnb-base"
    ],
    "rules": {
      "arrow-body-style": "off",
      "indent": "off",
      "jsx-quotes": "off",
      "comma-dangle": "off",
      "object-curly-newline": "off",
      "import/no-unresolved": "off",
      "max-len": "off",
      "linebreak-style": [
        "error",
        "windows"
      ],
      "import/extensions": "off"
    }
  }
}
